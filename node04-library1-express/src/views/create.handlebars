<form id="create-form" action="create.html">
    <h3>Create new book:</h3>

    <div class="row">
        <label for="book-title-input">Title:</label>
        <input id="book-title-input" name="title" type="text" value="Book Title"/>
    </div>

    <div class="row">
        <label for="book-author-input">Author:</label>
        <input id="book-author-input" name="author" type="text" value="Pushkin"/>
    </div>

    <div class="row">
        <label for="book-genre-input">Genre:</label>
        <input id="book-genre-input" name="genre" type="text" value="Romance"/>
    </div>

    <div class="row">
        <button type="submit">Save</button>
        <a href="/"><button type="button">Cancel</button></a>
    </div>
</form>